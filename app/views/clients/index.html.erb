<%= render_page_title "#{t('model.list', model: Client.model_name.human)}" do |toolbar|
  toolbar << {
    name: render_icon_and_text_content('icon-plus-sign', t('model.create', :model => Client.model_name.human)),
    url: new_client_path,
    options: {class: 'button button-primary'}
  }
end %>

<div class="icon-grid">
  <% @clients.each do |client| %>
  <%= link_to content_tag(:span, client.name), client_path(client), 'logo-url' => client.logo.url(:thumb) %>
  <% end %>
</div>
