<%= render_cell(:page_title, :show, data:{name: "#{t('model.list', model: Client.model_name.human)}",
  toolbar: {
    right:
    [
      render_cell(:button, :show, data:
      {
        name: fa_icon('plus-sign', text: t('model.create', :model => Client.model_name.human)),
        url: new_client_path,
        options: {class: 'btn btn-primary'}
      })
    ]
  }
})
%>

<%= render partial: 'shared/icon_grid',
  locals:
  {
    items: @clients.collect {|client| {name: client.name, url: client_projects_path(client), icon: client.logo.url(:thumb)}},
    editable: can?(:manage, Client)
  }
%>
