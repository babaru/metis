<%= render_cell(
  :page_title,
  :show,
  data:
  {
    name: "#{t('model.list', model: Medium.model_name.human)}",
    toolbar:
    {
      right:
      [
        render_cell(
          :button,
          :show,
          data:
          {
            name: fa_icon('plus-sign', text: t('model.create', :model => Medium.model_name.human)),
            url: new_medium_path,
            options:
            {
              class: 'btn btn-primary'
            }
          }
        )
      ]
    }
  }
) %>

<div class="icon-grid">
  <% @media.each do |medium| %>
  <%= link_to(
        content_tag(:span, medium.name),
        medium_path(medium),
        'logo-url' => medium.logo.url(:thumb),
        'data-edit-url' => edit_medium_path(medium),
        'data-remove-url' => medium_path(medium),
        'data-editable' => can?(:manage, Medium)
      )
  %>
  <% end %>
</div>
