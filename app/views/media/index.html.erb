<%= render_page_title "#{t('model.list', model: Medium.model_name.human)}" do |toolbar|
  toolbar << {
    name: icon_text('icon-plus-sign', t('model.create', :model => Medium.model_name.human)),
    url: new_medium_path,
    options: {class: 'button button-primary'}
  }
end %>

<div class="icon-grid">
  <% @media.each do |medium| %>
  <%= link_to content_tag(:span, medium.name), medium_path(medium), 'logo-url' => medium.logo.url(:thumb), 'data-editable' => can?(:manage, Medium) %>
  <% end %>
</div>
