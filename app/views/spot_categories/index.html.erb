<%= render_page_title "<strong>#{@medium.name}</strong> #{t('model.list', model: SpotCategory.model_name.human)}" do |toolbar|
  toolbar << {
    name: icon_text('icon-plus-sign', t('model.create', :model => SpotCategory.model_name.human)),
    url: new_medium_spot_category_path(@medium),
    options: {class: 'button button-primary'}
  } if can?(:manage, SpotCategory)
end %>

<ul class="nav nav-tabs">
  <li><%= link_to icon_text('icon-trello', ChannelGroup.model_name.human), medium_channel_groups_path(@medium) %></li>
  <li><%= link_to icon_text('icon-sitemap', Channel.model_name.human), medium_channels_path(@medium) %></li>
  <li class="active"><%= link_to icon_text('icon-folder-close', SpotCategory.model_name.human), medium_spot_categories_path(@medium) %></li>
  <li><%= link_to icon_text('icon-asterisk', Spot.model_name.human), medium_spots_path(@medium) %></li>
</ul>

<%= render partial: 'spot_categories_grid' %>
