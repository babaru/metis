<%= render_page_title "#{t('model.list', model: SpotCategory.model_name.human)}" do |toolbar|
  toolbar << {
    name: render_icon_and_text_content('icon-plus-sign', t('model.create', :model => SpotCategory.model_name.human)),
    url: new_spot_category_path,
    options: {class: 'button button-primary'}
  }
end %>

<%= grid(@spot_categories_grid, :show_filters => :always) do |g|

  g.column :html => {class: 'buttons'} do |spot_category|
    link_to(render_icon_content('icon-edit'), edit_spot_category_path(spot_category), :class => 'button', :rel => 'tooltip', :title => t('buttons.edit'))
  end

  g.column :html => {class: 'buttons'} do |spot_category|
    link_to(render_icon_content('icon-trash'), spot_category_path(spot_category), :method => :delete, :confirm => t("confirms.delete"), :class => 'button', :rel => 'tooltip', :title => t('buttons.delete'))
  end
end -%>
