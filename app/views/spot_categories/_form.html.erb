
<%= simple_form_for(@spot_category , :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :name %>

    <%= f.input :description %>

    <%= f.input :sample, as: :file %>

    <%= f.input :website_id, as: :hidden %>
        </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'button button-primary' %>
  </div>
<% end %>
