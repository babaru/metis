<%= grid(@spaces_grid, :show_filters => :always) do |g|

  g.column name: t('activerecord.attributes.space.name') do |space|
    link_to(
      space.name,
      space_path(space)
    )
  end

  g.column html: {class: 'btn-cell'} do |space|
    link_to(fa_icon('briefcase'), assign_space_client_path(space), class: 'btn', rel: 'tooltip', title: '分配客户')
  end

  g.column html: {class: 'btn-cell'} do |space|
    link_to(fa_icon('user'), assign_space_user_path(space), class: 'btn', rel: 'tooltip', title: '分配用户')
  end

  g.column html: {class: 'btn-cell'} do |space|
    link_to(fa_icon('edit'), edit_space_path(space), class: 'btn', rel: 'tooltip', title: t('buttons.edit'))
  end

  g.column html: {class: 'btn-cell'} do |space|
    link_to(fa_icon('trash'), space_path(space), method: :delete, confirm: t("confirms.delete"), class: 'btn btn-danger', rel: 'tooltip', title: t('buttons.delete'))
  end

end -%>
