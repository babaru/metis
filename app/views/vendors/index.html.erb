<%= render_cell(
  :page_title,
  :show,
  data:
  {
    name: "#{t('model.list', model: Vendor.model_name.human)}",
    toolbar:
    {
      right:
      [
        render_cell(
          :button,
          :show,
          data:
          {
            name: fa_icon('plus-sign', text: t('model.create', :model => Vendor.model_name.human)),
            url: new_vendor_path,
            options:
            {
              class: 'btn btn-primary'
            }
          }
        )
      ]
    }
  }
)
%>

<%= grid(@vendors_grid, :show_filters => :when_filtered) do |g|
  g.column name: t('activerecord.attributes.vendor.name') do |vendor|
    vendor.name
  end

  g.column html: {class: 'btn-cell'} do |vendor|
    link_to(fa_icon('edit'), edit_vendor_path(vendor), class: 'btn', rel: 'tooltip', title: t('buttons.edit'))
  end

  g.column html: {class: 'btn-cell'} do |vendor|
    link_to(fa_icon('trash'), vendor_path(vendor), method: :delete, confirm: t("confirms.delete"), class: 'btn btn-danger', rel: 'tooltip', title: t('buttons.delete'))
  end
end -%>
