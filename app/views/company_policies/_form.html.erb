
<%= simple_form_for(@company_policy , :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :year, as: :string %>
    <%= f.input :client_id, as: :hidden %>
    <%= f.input :medium_id, collection: Medium.all.map{|m| [m.name, m.id]} %>
    <%= f.input :framework %>
    <%= f.input :rebate %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
