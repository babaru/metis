<%= render_page_title "<strong>#{@medium.name}</strong> #{t('model.list', model: Spot.model_name.human)}" do |toolbar|
  toolbar << {
    name: icon_text('icon-plus-sign', t('model.create', model: Spot.model_name.human)),
    url: new_medium_spot_path(medium_id: @medium, spot_category_id: @spot_category_id),
    options: {
      class: 'button button-primary'
    }
  } if @spot_category && can?(:manage, Spot)

  toolbar << {
    name: icon_text('icon-upload', t('model.upload', model: Spot.model_name.human)),
    url: upload_spots_path(medium_id: @medium),
    options: {
      class: 'button button-primary'
    }
  }if can?(:manage, Spot)
end %>

<ul class="nav nav-tabs">
  <li><%= link_to icon_text('icon-trello', ChannelGroup.model_name.human), medium_channel_groups_path(@medium) %></li>
  <li><%= link_to icon_text('icon-sitemap', Channel.model_name.human), medium_channels_path(@medium) %></li>
  <li><%= link_to icon_text('icon-folder-close', SpotCategory.model_name.human), medium_spot_categories_path(@medium) %></li>
  <li class="active"><%= link_to icon_text('icon-asterisk', Spot.model_name.human), medium_spots_path(@medium) %></li>
</ul>

<%= render partial: 'spot_category_navs', object: @spot_categories %>

<%= render partial: 'spots_grid' if @spots_grid %>
