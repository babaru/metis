<%= render_cell(
  :page_title,
  :show,
  data:
  {
    name: "刊例库",
    toolbar:
    {
      right:
      [
        render_cell(
          :button,
          :show,
          data:
          {
            name: fa_icon('plus-sign', text: t('model.create', model: Spot.model_name.human)),
            url: new_spot_path(),
            options:
            {
              class: 'btn btn-primary'
            }
          }
        ),

        render_cell(
          :button,
          :show,
          data:
          {
            name: fa_icon('cloud-upload', text: t('model.upload', model: Spot.model_name.human)),
            url: upload_spots_path(medium_id: @medium),
            options:
            {
              class: 'btn btn-info'
            }
          }
        )
      ]
    }
  }
)
%>

<%= render partial: 'shared/spot_picker/spot_picker', locals: {media: @media, spot_picker: @spot_picker} %>

<% if @spot_picker.selected_medium %>

<%= render partial: 'shared/spot_picker/spot_candidates_grid', locals: {spots: @spots_grid} if @spots_grid %>

<% end %>
