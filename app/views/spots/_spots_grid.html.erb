<%= grid(@spots_grid, :show_filters => :always) do |g|

  g.column name: t('activerecord.attributes.spot.medium') do |spot|
    spot.medium.name
  end

  g.column name: t('activerecord.attributes.spot.channel') do |spot|
    spot.channel.name
  end

  g.column name: t('activerecord.attributes.spot.spot_category') do |spot|
    spot.spot_category.name
  end

  g.column name: t('activerecord.attributes.spot.name') do |spot|
    content_tag :strong, spot.name
  end

  g.column name: t('activerecord.attributes.spot.price'), html: {style: 'text-align: right;'} do |spot|
    content_tag :strong, number_to_currency(spot.price, format: "%n", precision: 0)
  end

  g.column name: t('activerecord.attributes.spot.unit') do |spot|
    spot.unit
  end

  g.column name: t('activerecord.attributes.spot.spec') do |spot|
    spot.spec
  end

  g.column name: t('activerecord.attributes.spot.remark') do |spot|
    spot.remark
  end

  g.column :html => {class: 'buttons'} do |spot|
    link_to(render_icon_content('icon-edit'), edit_spot_path(spot), :class => 'button', :rel => 'tooltip', :title => t('buttons.edit'))
  end

  g.column :html => {class: 'buttons'} do |spot|
    link_to(render_icon_content('icon-trash'), spot_path(spot), :method => :delete, :confirm => t("confirms.delete"), :class => 'button', :rel => 'tooltip', :title => t('buttons.delete'))
  end
end -%>
