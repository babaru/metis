
<%= simple_form_for(@shopping_cart_item , :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
            
    <%= f.input :owner_id %>
          
    <%= f.input :owner_type %>
          
    <%= f.input :quantity %>
          
    <%= f.input :item_id %>
          
    <%= f.input :item_type %>
          
    <%= f.input :price %>
                    </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'button button-primary' %>
  </div>
<% end %>
