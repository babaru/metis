<%= render_page_title "#{t('model.list', model: ShoppingCartItem.model_name.human)}" do |toolbar|
  toolbar << {
    name: icon_text('icon-plus-sign', t('model.create', :model => ShoppingCartItem.model_name.human)),
    url: new_shopping_cart_item_path,
    options: {class: 'button button-primary'}
  }
end %>

<%= grid(@shopping_cart_items_grid, :show_filters => :always) do |g|

  g.column :html => {class: 'buttons'} do |shopping_cart_item|
    link_to(icon('icon-edit'), edit_shopping_cart_item_path(shopping_cart_item), :class => 'button', :rel => 'tooltip', :title => t('buttons.edit'))
  end

  g.column :html => {class: 'buttons'} do |shopping_cart_item|
    link_to(icon('icon-trash'), shopping_cart_item_path(shopping_cart_item), :method => :delete, :confirm => t("confirms.delete"), :class => 'button', :rel => 'tooltip', :title => t('buttons.delete'))
  end
end -%>
