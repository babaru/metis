<%= render_page_title "#{t('model.list', model: UploadFile.model_name.human)}" do |toolbar|
  toolbar << {
    name: icon_text('icon-plus-sign', t('model.create', :model => UploadFile.model_name.human)),
    url: new_upload_file_path,
    options: {class: 'button button-primary'}
  }
end %>

<%= grid(@upload_files_grid, :show_filters => :always) do |g|

  g.column :html => {class: 'buttons'} do |upload_file|
    link_to(icon('icon-edit'), edit_upload_file_path(upload_file), :class => 'button', :rel => 'tooltip', :title => t('buttons.edit'))
  end

  g.column :html => {class: 'buttons'} do |upload_file|
    link_to(icon('icon-trash'), upload_file_path(upload_file), :method => :delete, :confirm => t("confirms.delete"), :class => 'button', :rel => 'tooltip', :title => t('buttons.delete'))
  end
end -%>
