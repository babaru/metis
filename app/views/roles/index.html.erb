<%= render_cell(
  :page_title,
  :show,
  data:
  {
    name: "#{t('model.list', model: Role.model_name.human)}",
    toolbar:
    {
      right:
      [
        render_cell(
          :button,
          :show,
          data:
          {
            name: fa_icon('plus-sign', text: t('model.create', :model => Role.model_name.human)),
            url: new_role_path,
            options:
            {
              class: 'btn btn-primary'
            }
          }
        )
      ]
    }
  }
)
%>

<%= grid(@roles_grid, :show_filters => :always) do |g|
  g.column name: t('activerecord.attributes.role.name') do |role|
    role.name
  end

  g.column name: t('activerecord.attributes.role.readable_name') do |role|
    role.readable_name
  end

  g.column name: t('activerecord.attributes.role.type') do |role|
    role.type
  end

  g.column html: {class: 'btn-cell'} do |role|
    link_to(fa_icon('edit'), edit_role_path(role), class: 'btn', rel: 'tooltip', title: t('buttons.edit'))
  end

  g.column html: {class: 'btn-cell'} do |role|
    link_to(fa_icon('trash'), role_path(role), method: :delete, confirm: t("confirms.delete"), class: 'btn btn-danger', rel: 'tooltip', title: t('buttons.delete'))
  end
end -%>
