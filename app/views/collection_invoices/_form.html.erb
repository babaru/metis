
<%= simple_form_for(@collection_invoice , :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :number %>

    <%= f.input :amount %>

    <%= f.input :invoice_type_id, collection: InvoiceType.invoice_types, as: :radio_buttons %>

    <%= f.input :sent_at, as: :date_time_picker %>

    <%= f.input :space_id, as: :hidden %>

    <%= f.input :client_id, collection: current_space.clients.map{|v| [v.name, v.id]} %>

    <%= f.input :agency_id, collection: current_space.agencies.map{|v| [v.name, v.id]} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
