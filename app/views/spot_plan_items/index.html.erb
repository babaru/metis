<%= render_page_title "#{t('model.list', model: SpotPlanItem.model_name.human)}" do |toolbar|
  toolbar << {
    name: render_icon_and_text_content('icon-plus-sign', t('model.create', :model => SpotPlanItem.model_name.human)),
    url: new_spot_plan_item_path,
    options: {class: 'button button-primary'}
  }
end %>

<%= grid(@spot_plan_items_grid, :show_filters => :always) do |g|

  g.column :html => {class: 'buttons'} do |spot_plan_item|
    link_to(render_icon_content('icon-edit'), edit_spot_plan_item_path(spot_plan_item), :class => 'button', :rel => 'tooltip', :title => t('buttons.edit'))
  end

  g.column :html => {class: 'buttons'} do |spot_plan_item|
    link_to(render_icon_content('icon-trash'), spot_plan_item_path(spot_plan_item), :method => :delete, :confirm => t("confirms.delete"), :class => 'button', :rel => 'tooltip', :title => t('buttons.delete'))
  end
end -%>
