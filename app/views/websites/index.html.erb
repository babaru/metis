<%= render_page_title "#{t('model.list', model: Website.model_name.human)}" do |toolbar|
  toolbar << {
    name: render_icon_and_text_content('icon-plus-sign', t('model.create', :model => Website.model_name.human)),
    url: new_website_path,
    options: {class: 'button button-primary'}
  }
end %>

<div class="icon-grid">
  <% @websites.each do |website| %>
  <%= link_to content_tag(:span, website.name), website_path(website), 'logo-url' => website.logo.url(:thumb) %>
  <% end %>
</div>
