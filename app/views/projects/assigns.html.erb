<%= render_page_title "<strong>#{@client.name}</strong> #{t('model.manager', model: ClientAssignment.model_name.human)}" %>

<%= simple_form_for(@project, url: save_project_assignments_path(@client), method: :post, html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :assigned_users,
    :collection => User.all.collect{ |r| [r.email, r.id] },
    :as => :check_boxes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'button button-primary' %>
  </div>
<% end %>
