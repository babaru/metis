<%= grid(@channel_groups_grid, :show_filters => :always) do |g|
  g.column name: t('activerecord.attributes.channel_group.name') do |channel_group|
    channel_group.name
  end

  g.column name: t('activerecord.attributes.channel_group.medium') do |channel_group|
    channel_group.medium.name
  end

  if can?(:manage, ChannelGroup)
    g.column :html => {class: 'btn-cell'} do |channel_group|
      link_to(
        fa_icon('edit'),
        edit_channel_group_path(channel_group),
        {
          class: 'btn',
          rel: 'tooltip',
          title: t('buttons.edit')
        }
      )
    end

    g.column :html => {class: 'btn-cell'} do |channel_group|
      link_to(
        fa_icon('trash'),
        channel_group_path(channel_group),
        {
          method: :delete,
          confirm: t("confirms.delete"),
          class: 'btn btn-danger',
          rel: 'tooltip',
          title: t('buttons.delete')
        }
      )
    end
  end
end -%>
