<%= grid(@channel_groups_grid, :show_filters => :always) do |g|
  g.column name: t('activerecord.attributes.channel_group.name') do |channel_group|
    channel_group.name
  end

  g.column name: t('activerecord.attributes.channel_group.medium') do |channel_group|
    channel_group.medium.name
  end

  if can?(:manage, ChannelGroup)
  g.column :html => {class: 'buttons'} do |channel_group|
    link_to(icon('icon-edit'), edit_channel_group_path(channel_group), :class => 'button', :rel => 'tooltip', :title => t('buttons.edit'))
  end

  g.column :html => {class: 'buttons'} do |channel_group|
    link_to(icon('icon-trash'), channel_group_path(channel_group), :method => :delete, :confirm => t("confirms.delete"), :class => 'button', :rel => 'tooltip', :title => t('buttons.delete'))
  end
  end
end -%>
