
<%= simple_form_for(@channel_group , :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :website_id, as: :hidden %>
    <%= f.association :channels, collection: @channels.collect{ |c| [c.name, c.id] },
    :as => :check_boxes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'button button-primary' %>
  </div>
<% end %>
