
<%= simple_form_for(@channel_group , :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :medium_id, as: :hidden %>
    <%= f.association :channels, label: '频道列表', collection: @channels.collect{ |c| [c.name, c.id] },
    :as => :check_boxes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
