<%= grid(@channels_grid, :show_filters => :always) do |g|

  g.column name: t('activerecord.attributes.channel.name') do |channel|
    channel.name
  end

  g.column name: t('activerecord.attributes.channel.channel_group') do |channel|
    channel.channel_group.name if channel.channel_group
  end

  if can?(:manage, Channel)

  g.column :html => {class: 'buttons'} do |channel|
    link_to(render_icon_content('icon-edit'), edit_channel_path(channel), :class => 'button', :rel => 'tooltip', :title => t('buttons.edit'))
  end

  g.column :html => {class: 'buttons'} do |channel|
    link_to(render_icon_content('icon-trash'), channel_path(channel), :method => :delete, :confirm => t("confirms.delete"), :class => 'button', :rel => 'tooltip', :title => t('buttons.delete'))
  end

  end
end -%>
