<div class="narrow-center-page">

<%= render_cell(
  :page_title,
  :show,
  data:
  {
    name: "#{t('model.create', model: Channel.model_name.human)} <small>#{t('simple_form.required.text') }</small>",
    toolbar:
    {
      left:
      [
        render_cell(
          :button,
          :show,
          data:
          {
            name: fa_icon('level-up rotate-270'),
            url: medium_channels_path(@medium),
            options:
            {
              class: 'btn',
              rel: 'tooltip',
              title: "#{t('labels.back_to')}#{t('model.list', :model => Channel.model_name.human)}",
            }
          }
        )
      ]
    }
  }
)
%>

<%= simple_form_for(@channel , :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :medium_id, as: :hidden %>
    <%= f.input :names, label: '频道名称列表', placeholder: '一行一个频道名称', as: :text %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>

</div>
