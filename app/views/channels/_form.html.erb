
<%= simple_form_for(@channel , :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :website_id, as: :hidden %>
    <%= f.input :name %>
    <%= f.input :channel_group_id, collection: ChannelGroup.where(website_id: @website.id).map {|v| [v.name, v.id] } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'button button-primary' %>
  </div>
<% end %>
