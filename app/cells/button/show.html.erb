<% if @button[:type] == 'group' %>
<div class="btn-group">
  <%= link_to([@button[:name], content_tag(:span, nil, class: 'caret')].join(' ').html_safe, "#", @button[:options]) %>
  <ul class="dropdown-menu">
    <% @button[:items].each do |item| %>
    <%= content_tag(:li, link_to(item[:name], item[:url], item[:options])) %>
    <% end %>
  </ul>
</div>
<% elsif @button[:type] == 'split-group' %>
<div class="btn-group">
  <%= link_to(@button[:name], @button[:url], @button[:options]) %>
  <%= link_to(content_tag(:span, nil, class: 'caret'), '#', @button[:dropdown_options]) %>
  <ul class="dropdown-menu">
    <% @button[:items].each do |item| %>
    <%= content_tag(:li, link_to(item[:name], item[:url], item[:options])) %>
    <% end %>
  </ul>
</div>
<% else %>
<%= link_to(@button[:name], @button[:url], @button[:options]) %>
<% end %>
